<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_mail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvRemitente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="Remitente:"
        android:textColor="@color/colorMensaje"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAsunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvRemitente"
        android:layout_alignStart="@+id/tvRemitente"
        android:layout_below="@+id/tvRemitente"
        android:layout_marginTop="38dp"
        android:text="Asunto:"
        android:textColor="@color/colorMensaje"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvAsunto"
        android:layout_alignStart="@+id/tvAsunto"
        android:layout_below="@+id/tvAsunto"
        android:layout_marginTop="47dp"
        android:text="TextView"
        android:textSize="18sp" />
</RelativeLayout>